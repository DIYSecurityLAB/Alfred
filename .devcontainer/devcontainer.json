{
  "name": "DIY-Crypto Workspace",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
  "forwardPorts": [5173],
  "postCreateCommand": "npm install && git init && npm run prepare",
  "customizations": {
    "vscode": {
      "extensions": [
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "editorconfig.editorconfig"
      ]
    }
  },
  "remoteUser": "root"
}
